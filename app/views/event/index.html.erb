<h2>Event index page</h2>

<table>
  <th>
    <td>Pathway</td>
    <td>Activity</td>
    <td>Provider</td>
    <td>Date</td>
    <td>Time</td>
  </th>
  <% @events.each do |event| %>
    <% provider = Provider.find(event.provider_id) %>
    <tr>
      <td></td>
      <td><%= event.pathway %></td>
      <td><%= event.activity %></td>
      <td><%= link_to provider.name, provider.url, target: :_blank %></td>
      <td><%= event.date %></td>
      <td><%= event.start_time %> - <%= event.end_time %></td>
    </tr>
  <% end %>
</table>


<h1>Create a Partner</h1>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
<%= form_tag "/provider", remote: true, method: "post" do %>
  <div class="pull-left col-4">
    <table>
      <tr>
        <td><%= label :first_name, "Contact's first name:"  %></td>
        <td><%= text_field_tag :first_name, nil, size: 35, required: true %></td>
      </tr>
      <tr>
        <td><%= label :last_name, "Contact's last name:"  %></td>
        <td><%= text_field_tag :last_name, nil, size: 35, required: true %></td>
      </tr>
      <tr>
        <td><%= label :email, "email:"  %></td>
        <td><%= text_field_tag :email, nil, size: 35, required: true %></td>
      </tr>
      <tr>
        <td><%= label :title, "Contact's title:"  %></td>
        <td><%= text_field_tag :title, nil, size: 35, placeholder: "optional" %></td>
      </tr>
      <tr>
        <td><%= label :organization, "Organization Name:"  %></td>
        <td><%= text_field_tag :organization, nil, size: 35, placeholder: "optional" %></td>
      </tr>
      <tr>
        <td><%= label :location, "Location:"  %></td>
        <td><%= text_field_tag :location, nil, size: 35, placeholder: "optional" %></td>
      </tr>
      <tr>
        <td><%= label :url, "Organization website:"  %></td>
        <td><%= text_field_tag :url, nil, size: 35, placeholder: "optional"%></td>
      </tr>
      <tr>
        <td><%= label :phone, "Phone:"  %></td>
        <td><%= text_field_tag :phone, nil, size: 35, placeholder: "optional"%></td>
      </tr>
    </table>
    <% hidden_field_tag 'school', current_user.school %>
    <%= submit_tag "Create partner" %>
  </div>
<% end %>

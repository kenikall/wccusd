<h1>Create a Partner</h1>
<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-info" %>
<% end %>
<%= form_tag "/provider", remote: true, method: "post" do %>
  <div class="pull-left col-4">
    <%= label :contact, "Contact's first name:"  %>
          <%= text_field_tag :first_name, nil, size: 35, required: true %>
    <br>
    <%= label :contact, "Contact's last name:"  %>
      <%= text_field_tag :last_name, nil, size: 35, required: true %>
    <br>
    <%= label :contact, "Contact's title:"  %>
      <%= text_field_tag :title, nil, size: 35 %>
    <br>
    <%= label :name, "Organization Name:"  %>
          <%= text_field_tag :name, nil, size: 35 %>
    <br>
    <%= label :email, "email:"  %>
          <%= text_field_tag :email, nil, size: 35, required: true %>
    <br>
    <%= label :location, "Location:"  %>
          <%= text_field_tag :location, nil, size: 35, placeholder: "optional" %>
    <br>
    <%= label :url, "Organization website:"  %>
          <%= text_field_tag :url, nil, size: 35, placeholder: "optional"%>
    <br>
    <%= label :phone, "Phone:"  %>
          <%= text_field_tag :phone, nil, size: 35, placeholder: "optional"%>
    <br>
    <%= submit_tag "Create partner" %>
  </div>
<% end %>

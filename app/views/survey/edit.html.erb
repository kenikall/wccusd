<%= link_to "Home", student_path(current_user), class: "survey-back-button btn-info pull-right" %>

<%= form_for(@survey) do |f|%>
  <%= f.label :question1, "Was this event connected to something you're learning about in class?"%><br>
  <%= f.label :question1, "Yes", :value => "true"  %>
  <%= f.radio_button :question1, true %>
  <%= f.label :question1, "No", :value => "false" %>
  <%= f.radio_button :question1, false %>
  <br>
  <%= f.label :question2, "Do you have a better sense of jobs and skills related to your pathway as a result of this event?" %>
  <<br>
  <%= f.label :question2, "Yes", :value => "true"  %>
  <%= f.radio_button :question2, true %>
  <%= f.label :question2, "No", :value => "false" %>
  <%= f.radio_button :question2, false %>
  <br>
  <%= f.label :question3, "Did this event help you think about what you may or may not want to do in the future?" %>
  <br>
  <%= f.label :question3, "Yes", :value => "true"  %>
  <%= f.radio_button :question3, true %>
  <%= f.label :question3, "No", :value => "false" %>
  <%= f.radio_button :question3, false %>
  <br>
  <%= f.label :question4, "Did the event help you to gain confidence in talking with professionals?" %>
  <br>
  <%= f.label :question4, "Yes", :value => "true"  %>
  <%= f.radio_button :question4, true %>
  <%= f.label :question4, "No", :value => "false" %>
  <%= f.radio_button :question4, false %>
  <br>
  <%= f.label :question5, "Do have any comments or suggestions for improving this event?" %>
  <%= f.text_field :question5, required: false, class: "form-control" %>
  <%= f.submit "Submit Survey", class: "survey-submit-button" %>
<% end %>
